{
  "name": "chrome-extension-react-vite-tailwind-boilerplate",
  "description": "Chrome Extension Boilerplate",
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "author": "Ahmed Dinar <ahmeddinar.cs@gmail.com> (https://dinar.sh/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmed-dinar/chrome-extension-react-vite-tailwind-boilerplate.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:test": "yarn lint && yarn prettier && yarn build && yarn e2e",
    "build:watch": "vite build --watch",
    "lint": "eslint .",
    "prettier": "prettier --write src tests",
    "preview": "vite preview",
    "postbuild": "node ./scripts/post-build.js",
    "test": "yarn build && yarn e2e",
    "e2e": "npx playwright test",
    "e2e:report": "npx playwright test && npx playwright show-report",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "file-saver": "^2.0.5",
    "lucide-react": "^0.456.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "sonner": "^2.0.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.48.2",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@types/chrome": "^0.0.280",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.10",
    "vite-plugin-static-copy": "^2.1.0"
  },
  "engines": {
    "node": ">=20.18.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "eslint .",
      "prettier --write src tests"
    ]
  }
}
